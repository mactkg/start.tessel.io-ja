- var thismod = "audio"
- var pkg = "audio-vs1053b"
- var doThis = "「Hold the config button to record...」と表示されたら、Tessel本体の「Config」と書いてある押しボタンスイッチを押しっぱなしにし、audioモジュールの近くで、少し大きめの声でしゃべってください。押しボタンスイッチを離すと、しゃべった内容が再生されます。"
- var bonus = "<br/><br/><b>おまけ：</b>録音を開始してから5秒後に自動的に停止するように、プログラムを変更してみてください。"

- var i = 1
- var moduleDocs = moduleDocs_filepath + pkg
- moreInfo = render(moreInfo, {'module': thismod, 'href': moduleDocs})


//- +see_video("http://youtu.be/JLZzLyH9jc4")
+make_directory(i, thismod)
- i++
+normal_row(i, moduleSpecial_filepath +  "audio-headphones" + ".jpeg", "「Headphones/Line out」と書いてある側のジャックに、ヘッドフォンまたはスピーカーのプラグを挿しこんでください。「Line in」の側のジャックには、マイクを挿しこむことができますが、このモジュール自体にマイクが組み込んであります。")
- i++
+normal_row(i, modulesPlugged_filepath +  thismod + ".jpeg", render(plugIn, {'module': thismod, 'port': 'A'}))
- i++
+normal_row(i, moduleCorners_filepath + thismod + ".jpg", render(install, {'package': pkg}))
- i++
+displayCode(i, code.code, thismod)
- i++
+normal_row(i, moduleSpecial_filepath + "config_button" + ".jpg", "Tesselの本体の基板に「Config」と書いてある押しボタンスイッチがあります。このボタンを押している間、周りの音が録音されます。")
- i++
+normal_row(i, moduleGifs_filepath + thismod + ".gif", render(push, {'module': thismod}) + doThis + bonus + moreInfo)
- i++
+seeForums(i, thismod, thismod)
