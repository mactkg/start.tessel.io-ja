- var thismod = "microsd"
- var title = "microSD"
- var pkg = "sdcard"
- var doThis = "Write to and read from your SD card!"
- var bonus = "<br/><br/><b>Bonus:</b> Change the code to write a text file to the SD card."

- var i = 1
- var moduleDocs = moduleDocs_filepath + pkg
- var moreInfo = moreInfo1 + title + moreInfo2 + moduleDocs + moreInfo3

//- +see_video("http://youtu.be/JLZzLyH9jc4")
+make_directory(i, thismod)
- i++
+normal_row(i, s3url+"modules_clipped/" +  thismod + ".png", "このモジュールに、マイクロSDカードを挿入してください。")
- i++
+normal_row(i, modulesPlugged_filepath +  thismod + ".jpeg", render(plugIn, {'module': title, 'port': 'A'}))
- i++
+normal_row(i, moduleCorners_filepath + thismod + ".jpg", render(install, {'package': pkg}))
- i++
+displayCode(i, code.code, thismod)
- i++
+normal_row(i, moduleGifs_filepath + thismod + ".gif", render(push, {'module': thismod}) + doThis + bonus + moreInfo)
- i++
+seeForums(i, thismod, title)
