- var thismod = "ble"
- var pkg = "ble-ble113a"
- var doThis = "何らかのBLEデバイスを用意し、アドバタイジングの状態にしてください。TesselがBLEデバイスを発見すると、画面に表示されます。"
- var bonus = "<br/><br/><b>おまけ：</b>発見したBLEデバイスのアドレスだけを表示するように、プログラムを変更してみてください。"

- var i = 1
- var moduleDocs = moduleDocs_filepath + pkg
- moreInfo = render(moreInfo, {'module': thismod.toUpperCase(), 'href': moduleDocs})

//- +see_video("http://youtu.be/JLZzLyH9jc4")
+make_directory(i, thismod)
- i++
+normal_row(i, modulesPlugged_filepath +  thismod + ".jpeg", render(plugIn, {'module': thismod.toUpperCase(), 'port': 'A'}))
- i++
+normal_row(i, moduleCorners_filepath + thismod + ".jpg", render(install, {'package': pkg}))
- i++
+displayCode(i, code.code, thismod)
- i++
+normal_row(i, moduleGifs_filepath + thismod + ".gif", render(push, {'module': thismod}) + doThis + bonus + moreInfo)
- i++
+seeForums(i, thismod, thismod.toUpperCase())
