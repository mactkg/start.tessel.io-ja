- var moduleList = ['accelerometer', 'ambient', 'audio', 'ble', 'camera', 'climate', 'gprs', 'gps', 'ir', 'microsd', 'nrf', 'relay', 'rfid', 'servo']

div#fre-sidebar
  ul(class="side-nav")
    li(class=(page === "install" ? "active" : ""))
      a(href="/ja/install") 1. install
    li( class=(page === "blinky" ? "active" : ""))
      a(href="/ja/blinky") 2. blinky
    li( class=(page === "modules" ? "active" : ""))
      a(href="/ja/modules") 3. modules
        //ul
        mixin moduleLink(val)
          li( style="padding-left:10px;" class=(page === ('modules/' + val) ? "active" : ""))
            a.side-bar-modules(href="/ja/modules/" + val)
              | &#9675; #{val}
        each val in moduleList
          +moduleLink(val)
    li( class=(page === "wifi" ? "active" : ""))
      a(href="/ja/wifi") 4. wifi
    li( class=(page === "tweet" ? "active" : ""))
      a(href="/ja/tweet") 5. tweet
    li( class=(page === "usage" ? "active" : ""))
      a(href="/ja/usage") 6. usage
    li( class=(page === "finished" ? "active" : ""))
      a(href="/ja/finished") 7. finished
